.divScrollBar {
	background-color: #ddd;
	position: absolute;
	opacity: 0.5;
	filter: Alpha(opacity=50);
}
.divScrollBar:hover {
	opacity: 1;
	filter: Alpha(opacity=100);
}
.divScrollBar div {
	background-color: #aaa;
	position: absolute;
	left: 0px;
	top: 0px;
}
